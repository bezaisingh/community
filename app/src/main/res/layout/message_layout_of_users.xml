<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/profile"/>

    <TextView
        android:id="@+id/receiver_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:hint="Receiver Message"
        android:background="@drawable/receiver_message_text_background"
        android:textColor="@android:color/background_light"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="14dp"

        />

    <TextView
        android:id="@+id/sender_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_alignParentTop="true"
        android:hint="Sender Message"
        android:background="@drawable/sender_message_text_backround"
        android:textColor="@android:color/background_light"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="14dp"

        />

</RelativeLayout>