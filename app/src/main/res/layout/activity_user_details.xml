<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/dl"
    android:orientation="vertical">


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetails"
    >
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />


    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        >

        <EditText
            android:id="@+id/fName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:inputType="textPersonName"
            android:autofillHints="" />



        <EditText

            android:id="@+id/lName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fName"
            android:hint="Last Name"
            android:layout_marginLeft="5dp"
            android:inputType="textPersonName"
            android:textSize="20sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/middleNameLayout"
        android:layout_below="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center">



        <EditText

            android:id="@+id/mName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Middle Name"
            android:inputType="textPersonName"
            android:textSize="20sp" />


        <TextView

            android:id="@+id/DOB"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Birth Date"
            android:inputType="date"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"

            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/gender"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/middleNameLayout"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true">

        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:padding="10dp"
                android:id="@+id/radioMale"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:padding="10dp"
                android:id="@+id/radioFemale"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Female" />


        </RadioGroup>
    </LinearLayout>


    <EditText
        android:id="@+id/mobNumber"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender"
        android:layout_centerHorizontal="true"
        android:hint="Mobile Number"
        android:inputType="phone"/>

    <TextView
        android:id="@+id/tvEmailId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:hint="Email ID"
        android:padding="2dp"
        android:textSize="20sp"
        android:layout_below="@+id/mobNumber"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />


    <EditText
        android:id="@+id/etaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:layout_below="@+id/tvEmailId"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <EditText

        android:id="@+id/dist"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etaddress"
       android:layout_marginLeft="10dp"
        android:hint="District"
        android:inputType="textCapCharacters"
        android:textSize="20sp"

        />

    <EditText

        android:id="@+id/state"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etaddress"
        android:layout_toRightOf="@id/dist"
        android:layout_marginLeft="20dp"
        android:hint="State"
        android:inputType="textCapCharacters"
        android:textSize="20sp" />


    <EditText

        android:id="@+id/Pin"
        android:layout_marginLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dist"
        android:hint="Pin"
        android:inputType="number"
        android:textSize="20sp" />

    <EditText

        android:id="@+id/country"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dist"
        android:layout_toRightOf="@id/Pin"
        android:layout_marginLeft="20dp"
        android:hint="Country"
        android:inputType="textCapCharacters"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/upi_Id"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pin"
        android:hint="UPI ID                                             "
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>




    <Button
        android:id="@+id/btnSave"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textAppearance="@style/buttonStyle1"
        />

    <Button
        android:id="@+id/btnSkip"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textAppearance="@style/buttonStyle1"
        />


</RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>